<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp" android:background="@drawable/bottom_border">
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/circle_check"
            app:layout_constraintEnd_toStartOf="@+id/circle_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/circle_name"
            app:layout_constraintBottom_toBottomOf="@+id/circle_name"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/circle_name"
            app:layout_constraintEnd_toStartOf="@+id/circle_pLevel"
            app:layout_constraintTop_toTopOf="@+id/circle_pLevel"
            app:layout_constraintBottom_toBottomOf="@+id/circle_pLevel"
            app:layout_constraintStart_toEndOf="@+id/circle_check" tools:text="name" android:textSize="18sp"/>
    <TextView
            android:text="plevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/circle_pLevel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circle_name" android:layout_marginStart="1dp"
            android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>